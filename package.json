{
  "name": "auth-service",
  "version": "0.1.0",
  "description": "Auth microservice with Fastify, JWT, Instagram OAuth, MFA",
  "type": "module",
  "main": "dist/app/server.js",
  "scripts": {
    "dev": "tsx watch src/app/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/app/server.js",
    "test": "jest --runInBand",
    "test:unit": "jest --testPathPattern=unit",
    "test:int": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=30000",
    "test:cov": "jest --coverage",
    "migrate": "npm run build && node dist/scripts/run-migrations.js",
    "migrate:revert": "npm run build && node dist/scripts/revert-migration.js",
    "gen:keys": "node scripts/generate-rsa-keys.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up --build",
    "docker:down": "docker-compose -f docker/docker-compose.yml down -v"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "@fastify/swagger": "^8.0.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "fastify": "^4.28.0",
    "ioredis": "^5.4.0",
    "jose": "^6.1.3",
    "kafkajs": "^2.2.0",
    "otplib": "^12.0.0",
    "pg": "^8.11.0",
    "resend": "^4.0.0",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.0",
    "typeorm": "^0.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
