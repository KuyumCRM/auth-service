# Server
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/auth_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=auth-service

# JWT â€” RS256 key pair (PEM format, base64-encoded in env)
JWT_PRIVATE_KEY_B64=
JWT_PUBLIC_KEY_B64=
JWT_ACCESS_TTL_SEC=900
JWT_REFRESH_TTL_DAYS=30

# Instagram OAuth
IG_APP_ID=
IG_APP_SECRET=
IG_REDIRECT_URI=https://localhost:3001/api/instagram/callback

# Google OAuth (Sign in with Google)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://your-dashboard-or-auth-host/api/v1/auth/google/callback

# Encryption (32 bytes base64 = 44 chars)
ENCRYPTION_KEY_B64=

# Internal
INTERNAL_API_KEY=
DASHBOARD_URL=https://localhost:3000
